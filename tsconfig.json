{
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "removeComments": true,
  },
  "ts-node": {
    "esm": true
  }
}
